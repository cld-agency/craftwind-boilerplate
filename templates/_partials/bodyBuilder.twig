{% set blocks = blocks ?? entry.bodyBuilder.with([]).all() %}

{% for block in blocks %}
	{% if block.type == 'widget' and block.widget|length %}
		{% set widgetEntry = block.widget[0] %}
		{% include [
			'_widgets/' ~ widgetEntry.slug|camel,
			'_widgets/' ~ widgetEntry.type.handle
			] ignore missing with {
			entry: widgetEntry,
			pageEntry: entry,
		} %}
	{% else %}
		{% include
			'_blocks/' ~ block.type
			ignore missing
		%}
	{% endif %}
{% endfor %}

